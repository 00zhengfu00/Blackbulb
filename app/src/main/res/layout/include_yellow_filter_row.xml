<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:orientation="vertical"
	android:paddingStart="16dp"
	android:paddingTop="16dp"
	android:paddingEnd="16dp"
	android:paddingBottom="16dp"
	tools:background="?attr/card_background_color">

	<TextView
		android:id="@+id/yellow_filter_label"
		android:layout_width="375dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:text="@string/yellow_filter"
		android:textAppearance="@android:style/TextAppearance.Material.Body2" />

	<Space
		android:layout_width="match_parent"
		android:layout_height="5dp"
		android:layout_weight="1" />

	<TextView
		android:id="@+id/yellow_filter_explanation"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="@string/yellow_filter_explanation" />

	<Space
		android:layout_width="match_parent"
		android:layout_height="5dp"
		android:layout_weight="1" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/yellow_filter_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:importantForAccessibility="no"
			android:src="@drawable/ic_wb_incandescent_black_24dp"
			android:tint="?attr/icon_tint" />

		<SeekBar
			android:id="@+id/yellow_filter_seek_bar"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:max="100"
			android:progress="0" />
	</LinearLayout>

</LinearLayout>